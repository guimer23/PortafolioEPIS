@model List<PortafolioEPIS.Models.Tbl_Profesion>
<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Profesión</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="~/Profesion/Agregar" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Agregar Profesión</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped custom-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Abrebiatura</th>
                        <th>Estado</th>
                        <th class="text-right">Acción</th>

                    </tr>
                </thead>
                <tbody>
                    @{ int conteo = 0;}
                    @foreach (var s in Model)
                    {
                        conteo = conteo + 1;
                        <tr>
                            <td>@conteo</td>
                            <td>@(s.Nombre_Profesion)</td>
                            <td>@(s.Abrebiatura_Profesion)</td>
                            <th><span class="custom-badge @(s.Estado_Profesion == true ?"status-green":"status-red")">@(s.Estado_Profesion == true ? "Activo" : "Inactivo")</th>
                            <td class="text-right">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="~/Profesion/Agregar/@s.Codigo_Profesion"><i class="fa fa-pencil m-r-5"></i> Editar</a>
                                        <a class="dropdown-item" href="~/Profesion/Eliminar/@s.Codigo_Profesion" onclick="return confirm('¿Esta Seguro de Eliminar.........?');"><i class="fa fa-trash-o m-r-5"></i> Eliminar</a>
                                    </div>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

