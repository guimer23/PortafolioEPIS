<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Agregar  Detalle Carga Académica</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <h4 class="card-title">Información Detalle Carga Académica</h4>
            @using (Html.BeginForm("Index", "DetalleCargaAcademica", FormMethod.Post))
            {
                <div class="row clearfix">
                    <div class="col-md-4">
                        @Html.Label("Plan de Estudio")
                        <div class="form-group">
                            <input type="text" class="form-control" value="2016-I" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.Label("Carga Académica")
                        <div class="form-group">
                            <input type="text" class="form-control" value="2016-I" disabled>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-4">
                        @Html.Label("Asignatura")
                        <div class="form-group">
                            <select class="form-control">
                                <option>-Seleccionar-</option>
                                <option>Matemática II</option>
                                <option>Economía I</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-5">
                        @Html.Label("Docente")
                        <div class="form-group">
                            <select class="form-control">
                                <option>-Seleccionar-</option>
                                <option>Liliana Vega Bernal</option>
                                <option>Lanchipa Enrique Valencia</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Sección")
                        <div class="form-group">
                            <select class="form-control">
                                <option>-Seleccionar-</option>
                                <option>A</option>
                                <option>B</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-md-12">
                        @Html.Label("Estado")
                        <div class="form-group">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status1" id="patient_active" value="option1" checked>
                                <label class="form-check-label" for="patient_active">Activo</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status1" id="patient_inactive" value="option2">
                                <label class="form-check-label" for="patient_inactive">Inactivo</label>
                            </div>
                        </div>
                    </div>
                </div><div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-group row">
                                <div class="col-sm-8 col-9 text-left">
                                    <div class="form-check form-check-inline">
                                        <a href="~/DetalleCargaAcademica/Index" class="btn btn btn-outline-primary btn-rounded" style='width:100px; height:35px'> Cancelar</a>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input type="submit" value="Crear" class="btn btn btn-primary btn-rounded" style='width:100px; height:35px' />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

