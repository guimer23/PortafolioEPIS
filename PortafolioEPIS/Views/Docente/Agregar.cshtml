@model PortafolioEPIS.Models.Tbl_Docente

@{
                /**/

                List<PortafolioEPIS.Models.Tbl_CargoDocente> cargodocente = ViewBag.Tbl_CargoDocente;
                List<PortafolioEPIS.Models.Tbl_Profesion> profesion = ViewBag.Tbl_Profesion;


}
@{
    ViewBag.Title = "Agregar";
}
<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Agregar Docente</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <h4 class="card-title">Información Docente</h4>
            @using (Html.BeginForm("Guardar", "Docente", FormMethod.Post, new { id = "frm-docente", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.Codigo_Docente)
                <div class="row clearfix">
                    <div class="col-md-6">
                        @Html.Label("Código")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Codigo_Docenteepis, new { @class = "form-control", @placeholder = "Ingrese codigo" })
                            @Html.ValidationMessageFor(x => x.Codigo_Docenteepis, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.Label("DNI")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.DNI_Docente, new { @class = "form-control", @placeholder = "Ingrese DNI" })
                            @Html.ValidationMessageFor(x => x.DNI_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-6">
                        @Html.Label("Nombres")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Nombres_Docente, new { @class = "form-control", @placeholder = "Ingrese nombres" })
                            @Html.ValidationMessageFor(x => x.Nombres_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.Label("Apellidos")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Apellidos_Docente, new { @class = "form-control", @placeholder = "Ingrese apellidos" })
                            @Html.ValidationMessageFor(x => x.Apellidos_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-4">
                        @Html.Label("Sexo")
                        <br />
                        @Html.RadioButtonFor(x => x.Sexo_Docente, true, new { @checked = true }) Masculino  <label>&nbsp &nbsp</label>
                        @Html.RadioButtonFor(x => x.Sexo_Docente, false) Femenino

                    </div>
                    <div class="col-md-4">
                        @Html.Label("Estado Civil")
                        <div class="form-group">
                            <select name="EstadoCivil_Docente" class="form-control">
                                <option @(Model.EstadoCivil_Docente == "" ? "Selected" : "") value="">-Seleccionar-</option>
                                <option @(Model.EstadoCivil_Docente == "Soltero" ? "Selected" : "") value="Soltero">Soltero</option>
                                <option @(Model.EstadoCivil_Docente == "Casado" ? "Selected" : "") value="Casado">Casado</option>
                                <option @(Model.EstadoCivil_Docente == "Divorciado" ? "Selected" : "") value="Divorciado">Divorciado</option>
                            </select>
                            @Html.ValidationMessageFor(x => x.EstadoCivil_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.Label("Fecha de Nacimiento")
                        <div class="form-group">
                            <div class="cal-icon">
                                @Html.TextBoxFor(x => x.FechaNac_Docente, new { @class = "form-control datetimepicker", @placeholder = "Ingrese Fecha" })
                                @Html.ValidationMessageFor(x => x.FechaNac_Docente, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Profesion:")
                            <select name="Codigo_Profesion" class="form-control">
                                <option @(Model.Codigo_Profesion.Equals("") ? "Selected" : "") value="">--Seleccione--</option>

                                @foreach (var p in profesion)
                                {
                                    <option @(Model.Codigo_Profesion.Equals(p.Codigo_Profesion) ? "Selected" : "") value="@p.Codigo_Profesion">@p.Nombre_Profesion</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(x => x.Codigo_Profesion, null, new { @class = "label label-danger" })

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Cargo:")
                            <select name="Codigo_CargoDocente" class="form-control">
                                <option value=""> -- Seleccione --</option>
                                @foreach (var p in cargodocente)
                                {
                                    if (p.Estado_CargoDocente == true)
                                    {

                                        <option @(Model.Codigo_CargoDocente.Equals(p.Codigo_CargoDocente) ? "selected" : "") value="@p.Codigo_CargoDocente">@p.Nombre_CargoDocente</option>
                                    }
                                }
                            </select>
                            @Html.ValidationMessageFor(x => x.Codigo_CargoDocente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-6">
                        @Html.Label("Dirección Actual")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.DireccionActual_Docente, new { @class = "form-control", @placeholder = "Ingrese Direccion" })
                            @Html.ValidationMessageFor(x => x.DireccionActual_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.Label("Dirección de Referencia")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.DireccionReferencia_Docente, new { @class = "form-control", @placeholder = "Ingrese de referencia" })
                            @Html.ValidationMessageFor(x => x.DireccionReferencia_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-4">
                        @Html.Label("Correo")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Correo_Docente, new { @class = "form-control", @placeholder = "Ingrese correo" })
                            @Html.ValidationMessageFor(x => x.Correo_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.Label("Teléfono Fijo")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.TelefonoFijo_Docente, new { @class = "form-control", @placeholder = "Ingrese teléfono fijo" })
                            @Html.ValidationMessageFor(x => x.TelefonoFijo_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.Label("Teléfono Celular")
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.TelefonoCelular_Docente, new { @class = "form-control", @placeholder = "Ingrese teléfono celular" })
                            @Html.ValidationMessageFor(x => x.TelefonoCelular_Docente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.Label("Foto")
                            <br />
                            @if (Model.Codigo_Docente > 0)
                            {
                                <img src="~/Imagen/@Model.Foto_Docente" height="70" width="70" />
                                @Html.HiddenFor(x => x.Foto_Docente)
                            }
                            else
                            {
                                <img src="~/Imagen/user.jpg" height="70" width="70" />
                                @Html.HiddenFor(x => x.Foto_Docente)

                            }
                            <input type="file" name="foto" />
                        </div>
                    </div>
                </div>


                <div class="row clearfix">
                    <div class="col-md-12">
                        @Html.Label("Estado")
                        <div class="form-group">
                            @Html.RadioButtonFor(x => x.Estado_Docente, true, new { @checked = true }) Activo  <label>&nbsp &nbsp</label>
                            @Html.RadioButtonFor(x => x.Estado_Docente, false) Inactivo
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-group row">
                                <div class="col-sm-8 col-9 text-left">
                                    <div class="form-check form-check-inline">
                                        <a href="~/Docente/Index2" class="btn btn btn-outline-primary btn-rounded" style='width:100px; height:35px'> Cancelar</a>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input type="submit" value="Guardar" class="btn btn btn-primary btn-rounded" style='width:100px; height:35px' />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
