@model PortafolioEPIS.Models.Tbl_CargoDocente
<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Agregar / Editar Cargo</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <h4 class="card-title">Información Cargo</h4>
            @using (Html.BeginForm("Guardar", "Cargo", FormMethod.Post))
            {

                @Html.HiddenFor(x => x.Codigo_CargoDocente)
                <div class="row clearfix">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Nombre")<span class="text-danger">*</span>
                            @Html.TextBoxFor(x => x.Nombre_CargoDocente, new { @class = "form-control"})
                            @Html.ValidationMessageFor(x => x.Nombre_CargoDocente, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-12">
                        @Html.Label("Estado")
                        <div class="form-group">
                            @Html.RadioButtonFor(x => x.Estado_CargoDocente, true)@Html.Label("Activo")

                            @Html.RadioButtonFor(x => x.Estado_CargoDocente, false)@Html.Label("Inactivo")
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-group row">
                                <div class="col-sm-8 col-9 text-left">
                                    <div class="form-check form-check-inline">
                                        <a href="~/Cargo/Index" class="btn btn btn-outline-primary btn-rounded" style='width:100px; height:35px'><i class="fa fa-close"></i>  Cancelar</a>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <button class="btn btn-primary btn-rounded" style='width:100px; height:35px' type="submit"><i class="fa fa-check"></i> Guardar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>