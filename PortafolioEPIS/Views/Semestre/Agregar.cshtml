<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Agregar Semestre</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <h4 class="card-title">Información Semestre</h4>
            @using (Html.BeginForm("Index", "Semestre", FormMethod.Post))
            {
                <div class="row clearfix">
                    <div class="col-md-6">
                        @Html.Label("Nombre")
                        <label>Nombre <span class="text-danger">*</span></label>
                        <div class="form-group">
                            @*@Html.TextBoxFor(x => x.Nombre_Semestre, new { @class = "form-control", @placeholder="Ingrese Nombre" })*@
                            <input type="text" class="form-control" placeholder="Ingrese Nombre">
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.Label("Año")
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Ingrese Año">
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-12">
                        @Html.Label("Estado")
                        <div class="form-group">
                            <div class="form-check form-check-inline">                                
                                <input class="form-check-input" type="radio" name="status" id="patient_active" value="option1" checked>
                                <label class="form-check-label" for="patient_active">Activo</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="patient_inactive" value="option2">
                                <label class="form-check-label" for="patient_inactive">Inactivo</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-group row">
                                <div class="col-sm-8 col-9 text-left">
                                    <div class="form-check form-check-inline">
                                        <a href="~/Semestre/Index" class="btn btn btn-outline-primary btn-rounded" style='width:100px; height:35px'> Cancelar</a>
                                    </div>
                                    <div class="form-check form-check-inline">                                        
                                        <input type="submit" value="Crear" class="btn btn btn-primary btn-rounded" style='width:100px; height:35px' />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>