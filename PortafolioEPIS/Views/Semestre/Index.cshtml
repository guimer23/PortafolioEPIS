@model List<PortafolioEPIS.Models.Tbl_Semestre>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Semestre</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="~/Semestre/Agregar" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Agregar Semestre</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped custom-table">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Año</th>
                        <th>Estado</th>
                        <th class="text-right">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                    <tr>
                        <td><a href="~/Semestre/Visualizar/" style="text-decoration: underline">@(s.Codigo_Semestre)</a></td>
                        <td>@(s.Nombre_Semestre)</td>
                        <td>@(s.Anio_Semestre)</td>
                        @if (s.Estado_Semestre == true)
                        {
                            <td><span class="custom-badge status-green">Activo</span></td>
                        }
                        else
                        {
                            <td><span class="custom-badge status-red">Inactivo</span></td>
                        }
                        <td class="text-right">
                            <div class="dropdown dropdown-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="~/Semestre/Editar/@s.Codigo_Semestre"><i class="fa fa-pencil m-r-5"></i> Editar</a>
                                    <a class="dropdown-item" href="~/Semestre/Eliminar/@s.Codigo_Semestre" onclick="return confirm('¿Esta seguro que desea de Eliminar?');" ><i class="fa fa-trash-o m-r-5"></i>  Eliminar</a>
       
                                </div>
                            </div>
                        </td>
                    </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
